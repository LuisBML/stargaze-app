<!-- Error 404 Template 1 - Bootstrap Brain Component -->
<% layout('layouts/boilerplate.ejs') %>

<section class="py-3 py-md-5 d-flex justify-content-center align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="text-center">
          <h2
            class="d-flex justify-content-center align-items-center gap-2 mb-4"
          >
            <span class="display-1 fw-bold">404</span>
          </h2>
          <h3 class="h2 mb-2">Oops! Something went wrong</h3>
          <p class="mb-5"><%= err.message %></p>
          <% if (process.env.NODE_ENV !== 'production') { %>
          <p class="mb-5"><%= err.stack %></p>
          <% } %>
          <a
            class="btn bsb-btn-5xl btn-dark rounded-pill px-5 fs-6 m-0"
            href="/places"
            role="button"
            >Back to Home</a
          >
        </div>
      </div>
    </div>
  </div>
</section>
